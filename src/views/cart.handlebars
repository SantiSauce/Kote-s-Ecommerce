<div class="body">
  <div class="product-label">
    <div class="label-text">
      <h1>My Cart</h1>
    </div>
  </div>
  <div class="card">
    <div class="header">
      <h4>Shopping Cart: <span id="tot">0</span>$</h4>
    </div>
    {{#each cart.products}}
    <div class="product" id="product"> 
      <!-- AquÃ­ puedes mostrar los detalles del producto -->
      <div>
        <!-- Imagen del producto -->
      </div>
      
      <div class="disc">
        <div class="name">{{this.product.title}}</div>
        <div class="color">{{this.product.category}}</div>
      </div>
      
      <div class="quant">
        <span class="minus">-</span>
        <span class="qt">{{this.quantity}}</span>
        <div><button class="plus" id="plus" value="{{this.product._id}}">+</button></div>
      </div>
      
      <div>
        <h4 class="price">{{this.product.price}}$</h4>
        <h4 class="pu">{{this.product.price}}</h4>
      </div>
      
      <div class="op">
        <span class="remove">remove</span>
      </div>
    </div>
    {{/each}}
    
    <div>
      <button id="purchase__btn" value="{{cart._id}}">CHECKOUT</button>
    </div>
  </div>
</div>




<style>
  .qt{
    margin-top: 4px;
  }
  body{
    margin:0;
  font-family:arial;
    background:#d7dbe0;
      background-color: rgb(19, 23, 32);
}
  
