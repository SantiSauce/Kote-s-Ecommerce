<header class="wrapper-navbar">
      <!-- brand-navbar start -->
      <div class="brand-navbar">
        <a href="/home"><img src="https://i.postimg.cc/W4PS83q9/logo-gin-store.png" alt="brand-logo"></a>
      </div>
      <!-- brand-navbar end -->
      <!-- nav-link start -->
      <nav class="nav-link">
        <ul>
          {{#if activeSession}}
          {{else}}
          <li><a href="/register">sign in</a></li>
          <li><a href="/login">log in</a></li>
          <li><a href="/session/login-github">github log in</a></li>
          {{/if}}
        </ul>
      </nav>
      <!-- nav-link end -->
      <!-- icon-navbar start --> 
       <div class="icon-navbar">
        <!-- icon-search & search-box start -->
        <div class="icon-search-navbar">
          <input type="checkbox" />
          <i class="fa-solid fa-magnifying-glass"></i>
          <div class="search-box">
            <input type="search" placeholder="Search" />
            <button type="submit">
              <i class="fa-solid fa-magnifying-glass"></i>
            </button>
          </div>
        </div>
        <!-- icon-search & search-box end -->
